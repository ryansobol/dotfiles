[user]
	name = Ryan Sobol
	email = contact@ryansobol.com
[alias]
	c = commit -m
	st = status --short --branch
	ci = commit --verbose
	ca = commit --amend --reuse-message=HEAD
	co = checkout
	br = branch
	df = diff HEAD
	dt = difftool HEAD
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	up = !git fetch origin && git rebase origin/master
	ir = !git rebase --interactive origin/master
	dfc = diff HEAD --cached
	rmb = !sh -c 'git branch -D $1 && git push origin :$1' -
	ign = ls-files --others --ignored --exclude-standard
	who = shortlog --numbered --summary --no-merges
	done = !git fetch && git rebase origin/master && git checkout master && git merge @{-1} && git push
	unadd = reset HEAD
	cleanup = !git remote prune origin && git gc && git stash clear
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = green bold
	changed = yellow bold
	untracked = cyan bold
[core]
	excludesfile = ~/.gitexcludes
[push]
	default = simple
[credential]
	helper = osxkeychain
